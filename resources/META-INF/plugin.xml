<idea-plugin>
    <id>dmitriy.molchanov.commit-prefix-plugin</id>
    <name>CommitPrefix</name>
    <version>1.1</version>
    <vendor email="penopllast@yandex.ru" url="https://github.com/MolchanovDmitry">github</vendor>

    <description>Помогает выставить актальный префикс для сообщения коммита</description>

    <change-notes><![CDATA[
        <b>1.0</b><br>
        <ul>
             <li>Подставка префикса</li>
             <li>Параметризация плагина</li>
        </ul>
        <b>1.1</b><br>
        <ul>
             <li>Редактирование правил</li>
             <li>Добавлено поле для проверки регулярного выражения</li>
        </ul>
    ]]>
    </change-notes>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0"/>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="main.kotlin.dmitriy.molchanov.CheckClearInitialCommitStartupActivity"/>
        <vcs.commitMessageProvider implementation="main.kotlin.dmitriy.molchanov.GitMessageTagCheckerProvider"/>
        <applicationService serviceImplementation="main.kotlin.dmitriy.molchanov.data.Repository"/>
    </extensions>

    <actions>
        <action class="main.kotlin.dmitriy.molchanov.ui.CommitPrefixAction" id="CommitPrefixAction"
                text="Commit Prefix Plugin">
            <add-to-group group-id="ToolsMenu"/>
        </action>
    </actions>

</idea-plugin>